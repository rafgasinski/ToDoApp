<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Custom colors. -->
        <item name="colorAccentSecondary">@color/darkAccentSecondary</item>
        <item name="colorDialogBackground">@color/darkDialogBackground</item>
        <item name="colorDialogNegativeButtonBackground">@color/darkNegativeDialogBackground</item>
        <item name="colorDialogNegativeButtonText">@color/white</item>
        <item name="colorTextHint">@color/darkTextHint</item>
        <item name="colorThemeBackground">@color/black</item>
        <item name="colorThemeForeground">@color/darkThemeForeground</item>
        <item name="colorRoundedViewBackground">@color/darkRoundedViewBackground</item>
        <item name="colorTextSecondary">@color/darkTextSecondary</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">?attr/colorThemeBackground</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:itemBackground">?attr/colorRoundedViewBackground</item>
    </style>
</resources>